
@{
    ViewBag.Title = "Forgot_password";
    Layout = "~/Views/Shared/_LayoutBlanck.cshtml";
}
@model Lecoin.Models.Clients
<div class="content-img" style="background-image:url(~/Content/Images/image_3.jpg)">
    <div class="container">
        @if (ViewBag.passwordfalse != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Erreur !</strong> @ViewBag.passwordfalse
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="form-center row justify-content-center">
            <div class="formulaire ">
                <h4 class="text-center"><span>Mot de passe oublié</span></h4>
                <form action="" method="post">
                    <div class="form-group col-sm-6">
                        <label for="Pseudo">Adresse email <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Email_client">
                        <p class="text-danger">@Html.ValidationMessageFor(s => s.Pseudo_Client)</p>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="Pseudo">pseudo <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Pseudo_Client">
                        <p class="text-danger">@Html.ValidationMessageFor(s => s.Pseudo_Client)</p>
                    </div>
                    @if (ViewBag.passwordtrue != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.passwordtrue
                        </div>
                    }
                    <button type="submit" class="btn-log">Mot mot de passe</button>
                </form>
                <p class="btn-reg">Mot de passe retrouvé ? <a href="~/Auth/Login" class="btn btn-outline-info">connectez-vous</a></p>
            </div>
        </div>
    </div>
</div>

