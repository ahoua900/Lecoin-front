
@{
    ViewBag.Title = "Mes_negociations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Lecoin.VM.NegoViewModel
<div class="container">
    @if (ViewBag.ok != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Félicitation !</strong> @ViewBag.ok
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div id="accordion">
        <div class="row">
            <div class="card col-sm-6">
                <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <h2 class="mb-0">
                        Négociations envoyées
                    </h2>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        <div class="row">
                            @foreach (var item in Model.NegociationsEnvoye)
                            {
                                <div class="col-sm-5 one-commande">
                                    <div class="commande-details">
                                        <div class="commande-text">
                                            <span style="font-size:12px;color:gray">Négociation du : @item.Date.ToString("dd/MM/yyyy")</span>
                                            <a class="text-dark" href="~/Achats/Shop_article/@item.IdArticle">@item.NomArticle</a>
                                            <p>Quantité : @item.Quantité</p>
                                            <p>Prix normal : <span class="badge">@item.PrixNormal FCFA</span></p>
                                            <p class="badge">Prix proposé : @item.PrixPropose FCFA</p>
                                            @if (item.Issuccess == true)
                                            {
                                                <div class="row">
                                                    <button class="btn btn-success">Accepté</button>
                                                    <a href="#" data-toggle="modal" data-target="#exampleModal/@item.IdNegociation" class="btn btn-primary">Acheter</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <button class="btn btn-danger">Réfusé</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="exampleModal/@item.IdNegociation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h3>Achat de @item.NomArticle</h3>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="one-market">
                                                    <div class="market-text">
                                                        <h6>@item.NomArticle</h6>
                                                        <p>Quantité : <span class="badge">@item.Quantité</span></p>
                                                        <p>Total à payer : <span class="badge">@item.PrixPropose</span></p>
                                                    </div>
                                                    <a href="~/Negociations/Ajouter_au_panier/@item.IdArticle" class="btn btn-primary">Au panier</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                       
                    </div>
                </div>
            </div>
            <div class="card col-sm-6">
                <div class="card-header" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    <h2 class="mb-0">
                        Négociations reçues
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                    <div class="card-body">
                        <div class="row">
                            @foreach (var item in Model.NegociationsRecues)
                            {
                                <div class="col-sm-5 one-commande">
                                    <div class="commande-details">
                                        <div class="commande-text">
                                            <span style="font-size:12px;color:gray">Négociation du : @item.Date.ToString("dd/MM/yyyy")</span>
                                            <a class="text-dark" href="~/Achats/Shop_article/@item.IdArticle">@item.NomArticle</a>
                                            <p>Quantité : @item.Quantité</p>
                                            <p>Prix normal : <span class="badge">@item.PrixNormal FCFA</span></p>
                                            <p class="badge">Prix proposé : @item.PrixPropose FCFA</p>
                                            @if (item.Issuccess == false)
                                            {
                                                <div class="row">
                                                    <a href="~/Negociations/Accept_Nego/@item.IdNegociation" class="btn btn-success">Accepter</a>
                                                    <a href="~/Negociations/Refuse_Nego/@item.IdNegociation" class="btn btn-danger">Refuser</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <button class="btn btn-success">Accepté</button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

