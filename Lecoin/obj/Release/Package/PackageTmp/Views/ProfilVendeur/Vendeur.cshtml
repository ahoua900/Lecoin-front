
@{
    ViewBag.Title = "Vendeur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Lecoin.VM.VendeurVM
<div class="block">
    <div class="container-fluid">
        <div class="col-12">
            <div class="simple-card">
                <div class="simple-card__content">
                    <h2 class="mt-2 --mini">Informations sur le vendeur</h2>
                    <div class="row mt-5">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="mb-4 brb" style="border-bottom: 1px dotted lightgray;">
                                <h5>Nom et prénoms : </h5>
                                <p style="color:#5d81eb">@Model.Clients.Nom_client</p>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="mb-4 brb" style="border-bottom: 1px dotted lightgray;">
                                <h5>Téléphone :</h5>
                                <p style="color:#5d81eb">@Model.Clients.Tel_client</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="simple-card">
                @{ var co = 0;}
                <div class="simple-card__content">

                    <h6 class="mt-2 --mini">@Model.Clients.Nom_client a <span style="color: #5d81eb;font-weight:bold">@co</span> annonces en ligne</h6>

                    <div class="row">
                        @foreach (var item in Model.Articles)
                        {
                            <div class="col-sm-2 cards" style="width: 16rem;">
                                <img class="card-img" src="~/PhotosArticle/@item.PhotoArticle" height="170" width="100">
                                <div class="card-body">
                                    <span style="font-size:10px;color:lightgray">Publiée le : @item.Date.ToString("dd/MM/yyyy")</span>
                                    <h5 class="card-title">@item.NomArticle</h5>
                                    <span class="badge">@item.Prix FCFA</span>
                                    <p>Vendu par : <span style="font-size:13px;font-weight:bold">@item.NomVendeur</span></p>
                                    <div class="shop-now">
                                        <a href="~/Commandes/Ajouter_au_panier/@item.IdArticle" data-toggle="tooltip" data-placement="top" title="Cliquez pour ajouter à votre panier"><i class="fa fa-plus "></i></a>
                                        <a href="~/Achats/Shop_article/@item.IdArticle" data-toggle="tooltip" data-placement="top" title="Cliquez pour voir l'article"><i class="fa fa-shopping-cart "></i></a>
                                    </div>
                                </div>
                            </div>
                            co++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

