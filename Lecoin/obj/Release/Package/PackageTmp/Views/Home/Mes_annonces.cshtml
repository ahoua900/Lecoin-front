
@{
    ViewBag.Title = "Mes_annonces";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Lecoin.Models.Articles>
<div class="all container-fluid">
    <div class="container">
        <h2>Mes annonces en ligne</h2>
        <fieldset class="shop-check">
            <legend> <a href="#"  data-toggle="modal" data-target="#exampleModal"><i class="fa fa-plus fa-2x"></i></a> </legend>
            <div class="row">
                <!--Start One card-->
                @foreach (var item in Model)
                {
                    <div class="col-sm-3 cards" style="width: 20rem;">
                        <img class="card-img" src="~/PhotosArticle/@item.PhotoArticle" height="170" width="100">
                        <div class="card-body">
                            <h5 class="card-title text-dark">@item.NomArticle</h5>
                            <p>Prix : <span class="badge">@item.Prix FCFA</span></p>
                            <p class="text-dark">Quantité en stock : <span class="badge">@item.QuantitéDispo</span></p>
                            <a href="~/Home/Delete_annonce/@item.IdArticle" class="btn btn-danger"> <i class="fa fa-trash"></i> </a>
                            <div id="accordion">
                                <div class="card">
                                    <div class="card-header" id="headingOne">
                                        <h5 class="mb-0">
                                            <button class="btn btn-default" data-toggle="collapse" data-target="#collapseOne/@item.IdArticle" aria-expanded="true" aria-controls="collapseOne">
                                                Description
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapseOne/@item.IdArticle" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                        <div class="card-body">
                                            <p class="text-dark" style="font-size:11px">@item.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End one card-->
                    </div>
                }
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content" style="color:black">
                            <div class="modal-header">
                                <h3 class="modal-title" id="exampleModalLabel">Nouvelle annonce</h3>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                @if (ViewBag.err != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <strong>Désolé !</strong> @ViewBag.err
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                            </div>
                            <div class="modal-body">
                                <form method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Nom du vendeur</label>
                                        <input type="text" class="form-control" name="NomVendeur"  value="@User.Identity.Name" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="NomArticle" placeholder="Nom de l'article" value="" />
                                    </div>
                                    <div class="form-group">
                                        <label>prix de l'article</label>
                                        <input type="text" class="form-control" name="Prix" placeholder="prix de l'article" value="" />
                                    </div>
                                    <div class="form-group">
                                        <label>Catégorie de l'article</label>
                                        <select class="form-control" name="Categorie">
                                            <option value="Chaussures">Chaussures</option>
                                            <option value="Vêtements">Vêtements</option>
                                            <option value="Electroménager">Electroménager</option>
                                            <option value="Electronique">Electronique</option>
                                            <option value="Téléphonie">Téléphonie</option>
                                            <option value="Cuisine">Cuisine</option>
                                            <option value="Meubles">Meubles</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <textarea rows="3" class="form-control" name="Description" placeholder="Description de l'article" value=""></textarea>
                                    </div>
                                    <div class="form-group">
                                        <input type="number" class="form-control" name="QuantitéDispo" placeholder="quantité disponible" value="" />
                                    </div>
                                    <div class="form-group">
                                        <label>Choisir une image de l'article</label>
                                        <input type="file" class="form-control" name="PhotoArticle" value="" />
                                        <p class="text-danger">@ViewData["errorPdf"]</p>
                                    </div>
                                    <button class="btn btn-primary" type="submit">Publier</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </fieldset>
    </div>
</div>
