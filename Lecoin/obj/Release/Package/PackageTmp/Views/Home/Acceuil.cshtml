
@{
    ViewBag.Title = "Acceuil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Lecoin.VM.HomeViewModel
@if (ViewBag.nego != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Félicitation !</strong> @ViewBag.nego
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<section class="row">
    <div class="col-sm-9">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/content/Images/blogs.jpg" alt="First slide">
                </div>
                @{ var cot = 0;}
                @foreach (var item in Model.AllArticles)
                {
                    if (cot < 2)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/PhotosArticle/@item.PhotoArticle" alt="Second slide">
                        </div>
                        cot++;
                    }

                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- Panier d'achat -->

    <div class="col-sm-3 shop">
        <fieldset class="shop-check">
            @if (User.Identity.IsAuthenticated)
            {
                if (Model.Paniers == null)
                {
                    <legend class="animate__animated animate__pulse animate__infinite	infinite"><i class="fa fa-shopping-cart fa-2x"></i><span class="badge">0</span></legend>
                }
                else
                {
                    <legend class="animate__animated animate__pulse animate__infinite	infinite"><i class="fa fa-shopping-cart fa-2x"></i><span class="badge">@Model.Paniers.Count()</span></legend>
                }

            }
            else
            {
                <legend class="animate__animated animate__pulse animate__infinite	infinite"><i class="fa fa-shopping-cart fa-2x"></i><span class="badge">0</span></legend>
            }

            @if (Model.Paniers == null || Model.Paniers.Count() == 0)
            {
                <h6 class="text-center">Votre panier est vide</h6>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Article</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (User.Identity.IsAuthenticated)
                        {
                            foreach (var item in Model.Paniers)
                            {

                                <tr>
                                    <th scope="row"><img src="~/PhotosArticle/@item.PhotoArticle" height="45" width="45" alt=""></th>
                                    <td>@item.NomArticle</td>
                                    <td>@item.Quantité</td>
                                    <td>@item.SommeTotale FCFA</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <a class="final-shop" href="~/Commandes/Mon_panier">Finaliser l'achat maintenant</a>
            }

        </fieldset>
    </div>
</section>
<!-- Partie d'affichage des articles récents -->
<section class="row">
    <div class="col-sm-12">
        <div class="carts-shopping">
            <h6 class="titre-cart">Produits récents <span class="badge animate__animated animate__fadeIn animate__infinite infinite">New</span></h6>
            <div class="row">
                @{ var co = 0;}
                @foreach (var item in Model.AllArticles)
                {
                    if (co < 12)
                    {
                        <div class="col-sm-2 cards" style="width: 16rem;">
                            <img class="card-img" src="~/PhotosArticle/@item.PhotoArticle" height="170" width="100">
                            <div class="card-body">
                                <span style="font-size:10px;color:lightgray">Publiée le : @item.Date.ToString("dd/MM/yyyy")</span>
                                <h5 class="card-title">@item.NomArticle</h5>
                                <span class="badge">@item.Prix FCFA</span>
                                <p>Vendu par : <span style="font-size:13px;font-weight:bold"><a href="~/ProfilVendeur/Vendeur/@item.NomVendeur" class="text-info">@item.NomVendeur</a></span></p>
                                <div class="shop-now">
                                    <a href="~/Commandes/Ajouter_au_panier/@item.IdArticle" data-toggle="tooltip" data-placement="top" title="Cliquez pour ajouter à votre panier"><i class="fa fa-plus "></i></a>
                                    <a href="~/Achats/Shop_article/@item.IdArticle" data-toggle="tooltip" data-placement="top" title="Cliquez pour voir l'article"><i class="fa fa-shopping-cart "></i></a>
                                    <a href="#" data-toggle="modal" data-target="#exampleModal/@item.IdArticle"><i class="fa fa-handshake-o "></i></a>
                                </div>
                            </div>
                            <!-- Modal negociation -->
                            <div class="modal fade" id="exampleModal/@item.IdArticle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h3 class="modal-title" id="exampleModalLabel">Négociation <i class="fa fa-handshake-o "></i></h3>

                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <label for="">Proposez votre prix et la quantité</label>
                                                <form action="" method="post">
                                                    <div class="one-market">
                                                        <div class="market-img">
                                                            <img src="~/PhotosArticle/@item.PhotoArticle" />
                                                            <div class="market-text">
                                                                <h6>@item.NomArticle</h6>
                                                                <p>Quantité : <span class="badge">1</span></p>
                                                                <p>Total à payer : <span class="badge">@item.Prix</span></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <input type="number" name="IdArticle" style="visibility:hidden" value="@item.IdArticle" class="form-control">
                                                    <input type="number" name="Quantité" placeholder="1" class="form-control">
                                                    <input type="text" name="PrixPropose" placeholder="prix proposé" class="form-control">
                                                    <button type="submit" class="btn btn-primary">Envoyer</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <h4>Merci de vous connecter pour négocier le prix d'un article !</h4>
                                                <a href="~/Auth/Login" class="btn btn-primary">Se connecter</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        co++;
                    }

                }

            </div>
        </div>
        <a class="more-btn text-center" href="~/Achats/All_Shop">Voir d'autres articles <i class="fa fa-plus"></i></a>
    </div>
