
@{
    ViewBag.Title = "Mon_panier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Lecoin.VM.ComViewModel

<div class="container">
    @if (ViewBag.ok != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Félicitation !</strong> @ViewBag.ok
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <fieldset class="shop-check">
        @if (Model.Paniers == null)
        {
            <legend class="animate__animated animate__pulse animate__infinite	infinite"><i class="fa fa-shopping-cart fa-2x"></i><span class="badge">0</span></legend>
        }
        else
        {
            <legend class="animate__animated animate__pulse animate__infinite	infinite"><i class="fa fa-shopping-cart fa-2x"></i><span class="badge">@Model.Paniers.Count()</span></legend>
        }
        <div class="row">
            @foreach (var item in Model.Paniers)
            {
                <div class="col-sm-4 one-market">
                    <div class="market-img">
                        <img src="~/PhotosArticle/@item.PhotoArticle" />
                        <div class="market-text">
                            <h6>@item.NomArticle</h6>
                            <p>Quantité : <span class="badge">@item.Quantité</span></p>
                            <p>Total à payer : <span class="badge">@item.SommeTotale</span></p>
                        </div>
                    </div>
                    <div class="row">
                        <a href="~/Commandes/Delete_Article/@item.IdPanier" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        <a href="~/Commandes/Resume_achat/@item.IdPanier" class="btn btn-primary">Commander</a>
                    </div>
                </div>
            }
        </div>
    </fieldset>
</div>

