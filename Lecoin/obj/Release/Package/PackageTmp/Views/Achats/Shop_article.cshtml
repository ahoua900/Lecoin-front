
@{
    ViewBag.Title = "Shop_article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Lecoin.VM.ShopViewModel
<div class="content-single">
    <div class="row">
        <img src="~/PhotosArticle/@Model.Article.PhotoArticle" height="250" alt="" class="col-sm-5">

        <div class="col-sm-6 info-details">
            <span style="font-size:12px;color:gray">Publiée le : @Model.Article.Date.ToString("dd/MM/yyyy")</span>
            <h2>@Model.Article.NomArticle</h2>
            <p>Prix unitaire : <span class="badge">@Model.Article.Prix FCFA</span> </p>
            <p>Quantité disponible : <span class="badge">@Model.Article.QuantitéDispo</span> </p>

            <p>Vendu par : @Model.Article.NomVendeur</p>
            <div class="btn-single">
                <div class="row">
                    <div class="col-sm-3">
                        <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-info">Négocier le prix</button>
                    </div>
                    <div class="col-sm-3">
                        <a href="~/Commandes/Ajouter_au_panier/@Model.Article.IdArticle" class="btn btn-primary">Ajouter au panier</a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="exampleModalLabel">Négociation <i class="fa fa-handshake-o "></i></h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <label for="">Proposez votre prix et la quantité</label>
                                <form action="" method="post">
                                    <div class="one-market">
                                        <div class="market-img">
                                            <img src="~/PhotosArticle/@Model.Article.PhotoArticle" />
                                            <div class="market-text">
                                                <h6>@Model.Article.NomArticle</h6>
                                                <p>Quantité : <span class="badge">1</span></p>
                                                <p>Total à payer : <span class="badge">@Model.Article.Prix</span></p>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="number" name="Quantité" placeholder="1" class="form-control">
                                    <input type="text" name="PrixPropose" placeholder="prix proposé" class="form-control">
                                    <button type="submit" class="btn btn-primary">Envoyer</button>
                                </form>
                            }
                            else
                            {
                                <h4>Merci de vous connecter pour négocier le prix d'un article !</h4>
                                <a href="~/Auth/Login" class="btn btn-primary">Se connecter</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div id="accordion">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h5 class="mb-0">
                            <button class="btn btn-default" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Savoir plus sur l'article
                            </button>
                        </h5>
                    </div>
                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <p>@Model.Article.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h2>Articles similaires</h2>   
    <div class="row">
        @{var cot = 0;}
        @foreach (var item in Model.Articles)
        {
            if (cot < 3)
            {
                <div class="col-sm-3 cards" style="width: 20rem;">
                    <img class="card-img" src="~/PhotosArticle/@item.PhotoArticle" width="100">
                    <div class="card-body">
                        <h5 class="card-title">@item.NomArticle</h5>
                        <span class="badge">@item.Prix FCFA</span>
                        <p style="font-size:13px;font-weight:bold">Vendu par : @item.NomVendeur</p>
                        <a href="~/Achats/Shop_article/@item.IdArticle" class="btn btn-primary">voir</a>
                    </div>
                </div>
            }

        }

    </div>
</div>

