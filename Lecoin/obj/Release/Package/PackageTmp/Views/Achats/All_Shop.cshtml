
@{
    ViewBag.Title = "All_Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Lecoin.VM.ShopViewModel
@if (ViewBag.nego != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Félicitation !</strong> @ViewBag.nego
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<section class="row">
    <div class="col-sm-9">
        <marquee direction="left">Négociez et achetez vos articles avec vos vendeurs habituels sans vous deplacer sur <span class="tit">Le<span class="ti">Coin</span></span></marquee>
        <div class="carts-shopping">
            <div class="search-space">
                <form action="" method="post">
                    <div class="input-group rounded">
                        <input type="search" name="search" class=" form-control rounded search-input" placeholder="recherchez un article" aria-label="Search"
                               aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="row">
                <!--Start One card-->
                @foreach (var item in Model.Articles.OrderByDescending(s => s.IdArticle))
                {
                    if (ViewData["no"] != null)
                    {
                        <h6 class="text-center">@ViewData["no"]</h6>
                    }
                    <div class="col-sm-3 cards" style="width: 16rem;">
                        <img class="card-img" src="~/PhotosArticle/@item.PhotoArticle" height="170" width="100">
                        <div class="card-body">
                            <span style="font-size:10px;color:gray">Publiée le : @item.Date.ToString("dd/MM/yyyy")</span>
                            <h5 class="card-title">@item.NomArticle</h5>
                            <span class="badge">@item.Prix FCFA</span>
                            <p>Vendu par : <span style="font-size:13px;font-weight:bold"><a href="~/ProfilVendeur/Vendeur/@item.NomVendeur" class="text-info">@item.NomVendeur</a></span> </p>
                            <div class="shop-now">
                                <a href="~/Commandes/Ajouter_au_panier/@item.IdArticle" data-toggle="tooltip" data-placement="top" title="Cliquez pour ajouter à votre panier"><i class="fa fa-plus "></i></a>
                                <a href="~/Achats/Shop_article/@item.IdArticle" data-toggle="tooltip" data-placement="top" title="Cliquez pour voir l'article"><i class="fa fa-shopping-cart "></i></a>
                                <a href="#" class="btn btn-prim" data-toggle="modal" data-target="#exampleModal/@item.IdArticle"><i class="fa fa-handshake-o "></i></a>
                            </div>
                        </div>
                        <!-- Modal negociation -->
                        <div class="modal fade" id="exampleModal/@item.IdArticle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title" id="exampleModalLabel">Négociation <i class="fa fa-handshake-o "></i></h3>

                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <label for="">Proposez votre prix et la quantité</label>
                                            <form action="" method="post">
                                                <div class="one-market">
                                                    <div class="market-img">
                                                        <img src="~/PhotosArticle/@item.PhotoArticle" />
                                                        <div class="market-text">
                                                            <h6>@item.NomArticle</h6>
                                                            <p>Quantité : <span class="badge">1</span></p>
                                                            <p>Total à payer : <span class="badge">@item.Prix</span></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <input type="number" name="IdArticle" style="visibility:hidden" value="@item.IdArticle" class="form-control">
                                                <input type="number" name="Quantité" placeholder="quantité" class="form-control">
                                                <input type="text" name="PrixPropose" placeholder="prix proposé" class="form-control">
                                                <button type="submit" class="btn btn-primary">Envoyer</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <h4>Merci de vous connecter pour négocier le prix d'un article !</h4>
                                            <a href="~/Auth/Login" class="btn btn-primary">Se connecter</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!--End one card-->
            </div>
        </div>
    </div>
    <!--categories liste-->
    <div class="col-sm-3 shope">
        <table class="table table-striped">
            <thead>

                <tr>
                    <th scope="col">Catégories</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td><a href="~/Achats/All_Shop/@item.NOmCategorie">@item.NOmCategorie</a> </td>
                        <td><a href="~/Achats/All_Shop/@item.NOmCategorie">@item.Nbres</a> </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="card-add">
            <!-- Autres articles liste-->
            <h4>Autres articles</h4>
            @foreach (var item in Model.Articles)
            {
                <a href="~/Achats/Shop_article/@item.IdArticle" class="onecard_add">
                    <img src="~/PhotosArticle/@item.PhotoArticle" alt="">

                    <div class="onecard-text">
                        <h6>@item.NomArticle</h6>
                        <span class="badge">@item.Prix FCFA</span>
                    </div>
                </a>
            }

        </div>
    </div>
</section>

