
@{
    ViewBag.Title = "Resume_achat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Lecoin.VM.NegoViewModel

<div class="container">
    @if (ViewBag.yes != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Félicitation !</strong> @ViewBag.yes
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (ViewBag.err != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Félicitation !</strong> @ViewBag.err
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
<div class=" checkout" >
    <form action="" method="post">
        <h4 class="text-center">Résumé de l'achat de @Model.Panier.NomArticle</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Article</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Prix</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row"><img src="~/PhotosArticle/@Model.Panier.PhotoArticle" height="45" width="45" alt=""></th>
                    <td>@Model.Panier.NomArticle</td>
                    <td>@Model.Panier.Quantité</td>
                    <td>@Model.Panier.SommeTotale FCFA</td>
                </tr>
            </tbody>
        </table>
        <div class="form-group">
            <label for="">Nom</label>
            <input type="text" class="form-control" name="Nom" value="@Model.Client.Nom_client" placeholder="votre nom">
        </div>
        <div class="form-group">
            <label for="">Prénoms</label>
            <input type="text" class="form-control" name="Prenom" value="@Model.Client.Prenom_client" placeholder="votre prénom">
        </div>
        <div class="form-group">
            <label for="">Contact</label>
            <input type="text" class="form-control" name="Contact" value="@Model.Client.Tel_client" placeholder="votre contact">
        </div>
        <div class="form-group">
            <label for="">Lieu de livraison</label>
            <input type="text" class="form-control" name="Lieu" placeholder="Lieu de livraison">
        </div>
        <button class="btn btn-primary" type="submit">Commander maintenant</button>
    </form>
</div>

